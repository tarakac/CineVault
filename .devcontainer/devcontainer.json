{
  "name": "Capstone Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:20",
  "features": {},
  "forwardPorts": [4000, 5173],
  "postCreateCommand": "npm install -g nodemon",
